<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.HomeFragment"
    android:background="@drawable/green_background">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/recipe_mate"
        android:textStyle="bold"
        android:layout_marginHorizontal="@dimen/home_margin"
        android:layout_marginTop="30sp"
        android:textSize="28sp"/>

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="@string/search_for_foods"
        android:iconifiedByDefault="false"
        android:layout_marginHorizontal="@dimen/home_margin"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:background="@drawable/search_view_background"
        android:layout_marginTop="10sp"
        android:layout_marginVertical="10sp"
        android:queryBackground="@null"
        />
    
    <LinearLayout
        android:id="@+id/categories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_view"
        app:layout_constraintStart_toStartOf="@id/search_view"
        app:layout_constraintEnd_toEndOf="@id/search_view"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/all_recipes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/all_recipes"
            android:gravity="center"
            android:background="@drawable/category_card_border"
            android:backgroundTint="@color/white"
            android:textSize="16sp"
            android:layout_marginEnd="@dimen/home_margin"
            android:padding="10sp"/>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipe_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/categories"
        app:layout_constraintStart_toStartOf="@id/categories"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="@dimen/home_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>